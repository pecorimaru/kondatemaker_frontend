name: Deploy to Server

on:
  push:
    branches:
      - main  # メインブランチにプッシュされたときにトリガー

jobs:
  deploy:
    runs-on: self-hosted  # セルフホステッドランナーを使用
    steps:
      - name: Check out code
        uses: actions/checkout@v2

      - name: Deploy to Server
        run: |
          # ここにデプロイのコマンドを追加
          ssh pecorimaru@192.168.0.115 "cd /develop/kondatemaker/ && git pull origin main"
